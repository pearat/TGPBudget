@model IEnumerable<TgpBudget.Models.BankAcct>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HouseholdId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeldAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AcctNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opened)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Closed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BalanceCurrent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BalanceReconciled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HouseholdId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeldAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AcctNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opened)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Closed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BalanceCurrent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BalanceReconciled)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<div class="col-md-4">
    <h2>Create New Account</h2>
    <p>Create a new financial Account.</p>
    <p><a class="btn btn-default" href=@Url.Action("Create", "BankAccts")>Create &raquo;</a></p>
</div>

<div>
    @Html.ActionLink("Return Home", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
