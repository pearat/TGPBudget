@model TgpBudget.Models.BankAcctList

@{
    ViewBag.Title = "Financial Accounts";
}


<div row style="display:inline">
    <div class="col-sm-5">
        <h3 style="display:inline; margin:10px">Accounts</h3>

    </div>
    <div class="col-sm-5">
        <h4 style="display:inline; margin-top:10px;text-align:center">Balance</h4>

    </div>


    @*<div class="col-sm-2">
            <p  style="display:inline; margin-top: 15px; text-align:center">
                @Html.ActionLink("New", "Open")
            </p>
        </div>*@


</div>


<table class="table">
    <thead>
        <tr>

            <td style="font-weight:bold; width:50%; text-align:left;">
                Account Name
            </td>

            <td style="font-weight:bold; width:25%; text-align:right;">
                Current
            </td>
            <td style="font-weight:bold; width:25%; text-align:right;">
                Reconciled
            </td>
            <td></td>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td style="font-weight:bold; width:50%; text-align:left;">
                Total
            </td>
            <td style="font-weight:bold; width:25%;">
                @Html.DisplayFor(model => model.totalAccts.BalanceCurrent)
            </td>
            <td style="font-weight:bold; width:25%">
                @Html.DisplayFor(model => model.totalAccts.BalanceReconciled)
            </td>

        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model.BAL)
            {
            <tr>

                <td style="width:50%; text-align:left;">
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>
                <td style="width:25%; text-align:right;">
                    @Html.DisplayFor(modelItem => item.BalanceCurrent)
                </td>
                <td style="width:25%; text-align:right;">
                    @Html.DisplayFor(modelItem => item.BalanceReconciled)
                </td>

            </tr>
        }
    </tbody>

</table>




