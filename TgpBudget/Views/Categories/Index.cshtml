                    @Html.DisplayFor(model => Model.IncTotal.Name)
                </td>

                <td style="font-weight:bolder; text-align:right; font-style:italic">
                    @Html.DisplayFor(model => Model.IncTotal.Reconciled)
                </td>
                <td style="font-weight:bolder; text-align:right; font-style:italic">
