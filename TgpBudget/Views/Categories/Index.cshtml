                    @Html.DisplayNameFor(model => model.IncTotal.Budget)
                </th>
                <th style="width:10%; text-align:right; font-style:italic;">
                    @Html.DisplayNameFor(model => model.IncTotal.Variance)
                </th>
                <th style="width:15%; text-align:center">
                    Actions
                </th>
            </tr>
        </thead>

        <tfoot style="vertical-align:bottom">
            <tr>
