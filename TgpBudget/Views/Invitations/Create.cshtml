@model TgpBudget.Models.Invitation

@{
    ViewBag.Title = "Create Invitation to Join";
}

<h2>Invite someone to Join your Household</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Invitation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.HouseholdId)
        @Html.HiddenFor(m => m.HouseholdName)
        @Html.HiddenFor(m => m.IssuedBy)

        <div class="form-group">
            @Html.LabelFor(m => m.IssuedBy, "Invitation by", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Model.IssuedBy
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.HouseholdName, "To Join this Household", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Model.HouseholdName
            </div>  
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.GuestEmail,"Email Address of your Guest: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(m => m.GuestEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.GuestEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
